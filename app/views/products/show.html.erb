<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<h3>Picture</h3>
<% if @product.picture.nil? %>
  <%= "There is no picture uploaded" %><br>
    <%= "Add a new picture?" %>
      <%= render 'pictures/form' %>

<% else %>
  <p>
    <%= image_tag @product.picture.url %>
    <br>
    Added on: <%= @product.picture.created_at %>
  </p>
<% end %>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.formatted_price %>
</p>

<h3>Reviews</h3>
<% @product.reviews.each do |review| %>
<p>
  <%= review.comment %>
  <br>
  Added on: <%= review.created_at %>
</p>
<% end %>

<h3>New Review</h3>
<%= render 'reviews/form' %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>
